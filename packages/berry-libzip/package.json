{
  "name": "@berry/libzip",
  "version": "0.1.0",
  "main": "./sources/index.ts",
  "devDependencies": {
    "@berry/pnpify": "workspace:0.1.0",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "build:libzip:wasm": "cd ./artifacts && ./build.sh",
    "postpack": "rm -rf lib",
    "prepack": "mkdir -p lib && rsync -a --exclude '*.ts' sources/ lib/ && pnpify tsc",
    "release": "yarn npm publish"
  },
  "publishConfig": {
    "main": "./lib/index.js",
    "typings": "./lib/index.d.ts"
  },
  "files": [
    "/lib/**/*"
  ]
}
