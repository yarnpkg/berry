{
  "name": "vscode-zipfs",
  "publisher": "arcanis",
  "displayName": "ZipFS - a zip file system",
  "description": "Allows to easily inspect and modify files stored within zip archives.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.zip",
    "onLanguage:zip",
    "onFileSystem:zip"
  ],
  "main": "./build/index.js",
  "contributes": {
    "languages": [
      {
        "id": "zip",
        "aliases": [
          "Zip Archive",
          "ZIP"
        ],
        "extensions": [
          ".zip"
        ]
      }
    ],
    "commands": [
      {
        "command": "zipfs.mountZipFile",
        "title": "Mount as Zip",
        "category": "Zip"
      },
      {
        "command": "zipfs.mountZipEditor",
        "title": "Mount the current file as a workspace",
        "category": "Zip"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == zip",
          "command": "zipfs.mountZipFile",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "when": "false",
          "command": "zipfs.mountZipFile"
        },
        {
          "when": "editorLangId == zip",
          "command": "zipfs.mountZipEditor"
        }
      ]
    }
  },
  "devDependencies": {
    "@berry/fslib": "workspace:0.0.6",
    "pnp-webpack-plugin": "^1.4.3",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3333",
    "vsce": "^1.54.0",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "scripts": {
    "build:vscode-zipfs": "run build",
    "build": "run webpack-cli",
    "watch": "run webpack-cli --watch",
    "code": "code --extensionDevelopmentPath=\"$(pwd)\" \"$(pwd)\""
  }
}
