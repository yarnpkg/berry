{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "arca"
  ],
  "rules": {
    "arca/curly": 2,
    "arca/import-align": 2,
    "arca/import-ordering": 2,
    "arca/newline-after-import-section": 2,
    "arca/no-default-export": 2
  }
}
