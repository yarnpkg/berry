{
    "compilerOptions": {
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "commonjs",
        "strict": true,
        "target": "es2017",
        "lib": ["dom", "es2017", "esnext.asynciterable"]
    },
    "include": [
        "packages/*/sources/**/*",
        "packages/*/types/**/*"
    ]
