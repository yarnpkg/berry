{
  "editor.tabSize": 2,
  "files.eol": "\n",
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "watchDirectory": "useFsEvents"
  },
  "npm.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact"
  ],
  "eslint.nodePath": ".yarn/sdks",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "pasteImage.path": "${projectRoot}/packages/gatsby/static",
  "pasteImage.basePath": "${projectRoot}/packages/gatsby/static",
  "pasteImage.forceUnixStyleSeparator": true,
  "pasteImage.prefix": "/",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "search.exclude": {
    "**/.pnp.*": true,
    "**/.yarn": true
  },
  // Use clippy to lint rust code
  "rust-analyzer.checkOnSave.command": "clippy",
  // Use rustfmt to format rust code on save
  "[rust]": {
    "editor.formatOnSave": true
  },
  // nom uses a lot of function composition which makes the the callable snippets annoying
  "rust-analyzer.completion.callable.snippets": "none",
}
