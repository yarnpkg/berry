    "bench": {
      "name": "bench",
      "command": "yarn bench",
      "runAtStart": true
    },
    "build:plugin-constraints": {
      "name": "build:plugin-constraints",
      "command": "yarn build:plugin-constraints",
      "runAtStart": false
    },
    "build:plugin-exec": {
      "name": "build:plugin-exec",
      "command": "yarn build:plugin-exec",
      "runAtStart": false
    },
    "build:plugin-interactive-tools": {
      "name": "build:plugin-interactive-tools",
      "command": "yarn build:plugin-interactive-tools",
      "runAtStart": false
    },
    "build:plugin-stage": {
      "name": "build:plugin-stage",
      "command": "yarn build:plugin-stage",
      "runAtStart": false
    },
    "build:plugin-typescript": {
      "name": "build:plugin-typescript",
      "command": "yarn build:plugin-typescript",
      "runAtStart": false
    },
    "build:plugin-version": {
      "name": "build:plugin-version",
      "command": "yarn build:plugin-version",
      "runAtStart": false
    },
    "build:plugin-workspace-tools": {
      "name": "build:plugin-workspace-tools",
