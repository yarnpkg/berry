      "runAtStart": false
    },
    "test:unit": {
      "name": "test:unit",
      "command": "yarn test:unit",
      "runAtStart": false
    },
    "typecheck:all": {
      "name": "typecheck:all",
      "command": "yarn typecheck:all",
      "runAtStart": false
    }
  }
